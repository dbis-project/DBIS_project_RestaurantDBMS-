    <form class="row g-3" style="display:flex ; align-items:center; justify-content:center ;margin-top: 30px;" action="/views/Reservation" id="Availablity">
      <div class="col-md-3" >
        <label for="inputdate" class="form-label" style="display:flex ; align-items:center; justify-content:center">Reservation Date</label>
