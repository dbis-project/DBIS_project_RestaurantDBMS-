            <input type="date" name="date"  required class="form-control" id="inputdate" href="views/home.ejs">
            <%}else{%>
                <input type="date "value=<%=locals.date%> name="date" class="form-control" id="inputdate" href="views/home.ejs">
                <%}%>
    </div>
    <div class="col-12" style="display:flex ; align-items:center; justify-content:center">
        <button type="submit" class="btn btn-primary">Check Available Tables</button>
      </div>
    </form style="display:flex ; align-items:center; justify-content:center ;margin-top: 100px;" >

    <% if(locals.bool==0){ %>
