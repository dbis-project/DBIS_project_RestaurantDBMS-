            <% for(let values of result){%> 
                <option><%=values.table_no%></option>
                <% }%>
            
        </select>
        </div>
        <div class="col-md-3" >
            <label for="inputAddress2" class="form-label" style="display:flex ; align-items:center; justify-content:center">Customer Name</label>
            <input type="text" required class="form-control" name="name" id="cust_name" placeholder="Name">
          </div>
          <div class="col-md-3" >
            <label for="inputAddress2" class="form-label" style="display:flex ; align-items:center; justify-content:center">Customer Email</label>
            <input type="text" required class="form-control" name="Email" id="cust_email" placeholder="Email">
          </div>
          <div class="col-md-3" >
            <label for="inputAddress2" class="form-label" style="display:flex ; align-items:center; justify-content:center">Customer Number</label>
            <input type="number" required  class="form-control" name="Phone Number" id="cust_number" placeholder="Phone Number">
          </div>
        <div style="display:flex ; align-items:center; justify-content:center">
          <div class="col-md-3" >
            <label for="inputAddress2" class="form-label" style="display:flex ; align-items:center; justify-content:center">People Count</label>
            <input type="number" required class="form-control" name="num_peop" id="cust_count" min="0" max="20" placeholder="People Count">
          </div>
        </div>
          <div class="col-12" style="display:flex ; align-items:center; justify-content:center">
            <button type="submit" class="btn btn-primary">Reserve</button>
          </div>
          <input type="hidden" class="form-control" name="date" id="date" value=<%=locals.date%> >
        </form>
