  <%- include('../templates/partials/navbar'); %>
<div style="margin-top:40px ;margin-left:28px ;">
  <div class="form-group col-md-6" style="display:flex ; align-items:center; justify-content:center">  
    <h3>EDIT MENU</h3>
  </div>
  

    <form class="row g-3" action="/updatemenu">
      <div class="col-md-3">
        <label for="inputitem" class="form-label">Item Name</label>
        <select id="inputitem" name="iname" class="form-select">
          <% for(let values of results1){%>
            <option><%=values.iname%></option>
            
            <%}%>
        </select>
      </div>
      <div class="col-md-3">
        <label for="inputEmail4" class="form-label">Availablity</label>
        <select id="inputEmail4" name="Availablity" class="form-select">
          
          <option>available</option>
          <option>not available</option>
        </select>
      </div>
      
      
      <div class="row " >
        <div class="col-md-3">
          <label for="inputPassword4" class="form-label">Specialist Chef</label>
          <select id="inputPassword4" name="chef" class="form-select">
            
            <% for(let values of results2){%>
              <option><%=values.sname%></option>
              
              <%}%>
          </select>
        </div>
        <div class="col-md-3" >
        <label for="inputAddress2" class="form-label">Price</label>
        <input type="text" class="form-control" name="Price" id="inputAddress2" placeholder="price">
      </div>
      </div>
      
      
      
      
      <div class="form-group col-md-6" style="display:flex ; align-items:center; justify-content:center">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>

    
</div> 


<div style="margin-top:40px ;margin-left:28px ;">   
    <div class="form-group col-md-6" style="display:flex ; align-items:center; justify-content:center"> 
    <h3>ADD ITEM TO MENU</h3>
    </div> 

    <form class="row g-3" action="/additem">
      <div class="col-md-3">
        <label for="inputitem name" class="form-label">Item Name</label>
        <input type="text" class="form-control" name="iname" id="inputitem name" placeholder="Item name">
        
      </div>
      <div class="col-md-3">
        <label for="inputEmail45" class="form-label">Availablity</label>
        <select id="inputEmail45" name="Availablity" class="form-select">
          
          <option>available</option>
          <option>not available</option>
        </select>
      </div>
      
      
      <div class="row " >
        <div class="col-md-3">
          <label for="inputPassword45" class="form-label">Specialist Chef</label>
          <select id="inputPassword45" name="chef" class="form-select">
            
            <% for(let values of results2){%>
              <option><%=values.sname%></option>
              
              <%}%>
          </select>
        </div>

        <div class="col-md-3">
          <label for="inputEmail4" class="form-label">Description</label>
          <select id="inputEmail4" name="desc" class="form-select">
            
            <option>veg</option>
            <option>non-veg</option>
          </select>
        </div>
        
      </div>

  
    <div class="row">   
      <div class="col-md-3" >
        <label for="inputAddress3" class="form-label" >Price</label>
        <input type="text" class="form-control" name="Price" id="inputAddress3" placeholder="price">
      </div>
    </div>
    
    
      
    <div class="form-group col-md-6" style="display:flex ; align-items:center; justify-content:center">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  
      
   

    </form>
</div>
 
