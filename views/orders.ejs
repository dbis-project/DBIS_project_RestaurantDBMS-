    <form style="margin-top:120px ;margin-left:28px ;" action="/order-submit" class="tanwish">
        <!-- <div class="form-row"> -->
          <div class="row align-items-center g-3">


          <div class="form-group col-md-2">
            <label for="inputPassword4">Customer name</label>
            <input type="text" class="form-control" name="cname" id="inputPassword4" placeholder="Customer name">
          </div>
          <div class="form-group col-md-2">
            <label for="inputPassword4">Contact no. </label>
            <input type="text" class="form-control" name="phone" id="inputPassword4" placeholder="Contact no.">
          </div>
          <div class="form-group col-md-2">
            <label for="inputPassword4">Mail id</label>
            <input type="email" class="form-control" name="email" id="inputPassword4" placeholder="Mail id">
          </div>

        </div>

        <div class="row align-items-center g-3">
          <div class="form-group col-md-6">
            <label for="inputAddress">Order contents</label>
            <input type="text" class="form-control"  name="contents" id="inputAddress" placeholder="Describe the menu">
          </div>
        </div>  
        <div class="row align-items-center g-3">
          <div class="form-group col-md-4">
            <label for="inputEmail4">Order Type</label>
            <input type="text" name="type" class="form-control" id="inputEmail4" placeholder="Dine in or Take away">
          </div>
          <div class="form-group col-md-2">
            <label for="tab">Table no.</label>
            <!-- <input type="text" class="form-control" name="table" id="inputPassword4" placeholder="Table no."> -->
            <select name="table" id="tab" class="form-control">
              <option >1</option>
              <option >2</option>
              <option >3</option>
              <option >4</option>
              <option >5</option>
              <option >6</option>
              <option >7</option>
              <option >8</option>
              <option >9</option>
              <option >10</option>
              <option >11</option>
              <option >12</option>
              <option >13</option>
              <option >14</option>
              <option >15</option>
              <option >16</option>
              <option >17</option>
              <option >18</option>
              <option >19</option>
              <option >20</option>
            </select>
          </div>
        </div>
          
        
        


     

        <div class="row align-items-center g-3">

          <div class="form-group col-md-2">
            <label for="inputCity">Amount</label>
            <input type="text" name="Amount" class="form-control" id="inputCity" >
          </div>
        

          <div class="form-group col-md-4">
            <label for="inputState">Attending Staff</label>
            <select id="inputState"  name="Attendent" class="form-control">
              
              <% for(let values of result){%>
                <option><%=values.sname%></option>
                
                <%}%>
              
            </select>
          </div>
          
          
        </div>


        <!-- </div>
          <div class="form-group col-md-6">
